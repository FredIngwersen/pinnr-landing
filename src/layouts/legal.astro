---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title} â€” pinnr</title>
    <meta name="description" content={frontmatter.description} />
    <meta name="robots" content="noindex" />
  </head>

  <body class="bg-background text-foreground antialiased">
    <Header />
    <main class="pt-24 sm:pt-32 pb-16 sm:pb-24 px-4 sm:px-6">
      <article class="max-w-2xl mx-auto prose prose-slate dark:prose-invert">
        <h1>{frontmatter.title}</h1>
        <p class="text-muted-foreground text-sm">Last updated: {frontmatter.lastUpdated}</p>
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
